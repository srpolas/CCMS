@{
}
@model List<CCMS.Models.Entities.Student>
<div class="container">
	<div class="d-flex justify-content-between">
		<h1>All Students</h1>
		<a class="btn btn-primary btn-lg justify-content-center text-center align-content-center px-5 " href="@Url.Action("Add", "Students")">Create</a>
	</div>
	<div class="mt-3 ">
	<table class="table table-responsive table-bordered table-hover">
			<thead>
				<tr class="text-center">
					<th>Id</th>
					<th>Name</th>
					<th>Email</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var student in Model)
				{
					<tr>
						<td>@student.Id</td>
						<td>@student.Name</td>
						<td>@student.Email</td>
						<td class="justify-content-center d-flex ">
							<a class="btn btn-primary px-4 mx-1" href="@Url.Action("Edit", "Students", new { id = student.Id })">Edit</a>
							<a class="btn btn-info" href="@Url.Action("Details", "Students", new { id = student.Id })">Details</a>
						</td>
					</tr>
				}
			</tbody>

		</table>
	</div>
</div>