@{
}
@model CCMS.Models.Entities.Student

<h1>Edit Student</h1>
@if (Model is null)
{
	<div class="alert alert-danger">
		Student not found
	</div>
	<a href="/Students/List">Back</a>
}
else 
{
<form method="post">
	<div class="mt-3">
		<label class="form-label">Student ID</label>
		<input type="text" class="form-control" asp-for="Id" readonly />
	</div>

	<div class="mt-3">
		<label class="form-label">Name</label>
		<input type="text" class="form-control" asp-for="Name" />
	</div>

	<div class="mt-3">
		<label class="form-label">Email</label>
		<input type="email" class="form-control" asp-for="Email" />
	</div>

	<div class="mt-3">
		<label class="form-label">Phone Number</label>
		<input type="text" class="form-control" asp-for="PhoneNumber" />
	</div>

	<div class="mt-3">
		<input type="checkbox" class="form-check-input" id="subscribed" asp-for="Subscribed" />
		<label class="form-check-label" for="subscribed">Subscribed</label>
	</div>

	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
		<button class="btn btn-danger" type="submit" asp-action="Delete" asp-controller="Students">Delete</button>
	</div>
</form>
}

